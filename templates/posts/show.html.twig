{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block main %}
    <h1>Posts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Publication</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Date de cr√©ation</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_posts_index') }}">Retour</a>

    <a href="{{ path('app_posts_edit', {'slug': post.slug}) }}">Modifier</a>

    {{ include('posts/_delete_form.html.twig') }}
{% endblock %}
